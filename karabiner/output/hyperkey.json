  "rules": [
    {
      "description": "Capslock to Esc/Hyper",
      "manipulators": [
        {
          "description": "capslock: hyper",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          ]
        },
        {
          "description": "escape: capslock switch",
          "type": "basic",
          "from": {
            "key_code": "escape",
            "modifiers": {
              "optional": [
                "caps_lock"
              ],
              "mandatory": [
                "right_command",
                "right_control",
                "right_shift",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "caps_lock",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        },
        {
          "description": "hyper + spacebar: language switch",
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "hyper + left_command + spacebar: emoji",
          "type": "basic",
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": [
                "left_command",
                "right_shift",
                "right_command",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "spacebar",
              "modifiers": [
                "left_control",
                "left_command"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Disable arrow keys",
      "manipulators": [
        {
          "description": "left",
          "type": "basic",
          "from": {
            "key_code": "left_arrow"
