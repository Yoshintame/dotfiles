[
  {
    "key": "cmd+shift+r",
    "command": "workbench.action.reloadWindow",
    "when": "editorTextFocus"
  },
  {
    "key": "cmd+r",
    "command": "workbench.action.tasks.runTask"
  },
  {
    "key": "cmd+j",
    "command": "workbench.action.togglePanel"
  },
  {
    "key": "cmd+shift+o",
    "command": "projectManager.listGitProjects#sideBarGit"
  },

